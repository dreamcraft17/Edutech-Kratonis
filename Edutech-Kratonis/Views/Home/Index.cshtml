<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .jumbotron {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .full-width {
        width: 100%;
        margin-top: 20px;
        max-width: 700px;
    }

    .jumbotron input[type="text"] {
        max-width: 100%;
    }

    .home-page {
        display: flex;
        height: 100vh;
        justify-content: center;
        align-items: center;
    }

    .home-container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 20px;
    }

    .home-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .home-image img {
            max-width: 100%;
            height: auto;
        }

    .testi-form {
        flex: 1;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .testi-1 {
        background-color: lightpink;
        padding: 10px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        text-align: center;
        height: 120px; /* Adjust the height */
        width: auto; /* Set the width to auto to expand horizontally */
        font-size: 0.9em;
    }

    .circle-image {
        width: 50px; /* Reduce the size of the image */
        height: 50px; /* Reduce the size of the image */
        border-radius: 50%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
    }

        .circle-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .testi-1 div {
        flex: 1;
    }

    .testi-1 h3 {
        margin: 5px 0;
        font-size: 1em;
    }

    .testi-1 p {
        margin: 2px 0;
    }

    /* New styles for dashboard */
    .dashboard-container {
        display: flex;
        padding: 20px;
        gap: 20px;
    }

    .sidebar {
        flex: 1;
        background-color: #f8f8f8;
        padding: 20px;
        border-radius: 10px;
    }

        .sidebar h2 {
            margin-bottom: 20px;
            font-size: 1.2em;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 10px;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #333;
                }

    .popular-courses {
        flex: 3;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

        .popular-courses h2 {
            text-align: center;
        }

    .course-card {
        background-color: #ffe6e6;
        padding: 20px;
        border-radius: 10px;
        display: flex;
        gap: 20px;
    }

        .course-card img {
            width: 100px;
            height: 100px;
            background-color: #d9534f;
            border-radius: 10px;
        }

    .course-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .course-details h3 {
            margin: 0;
        }

        .course-details p {
            margin: 10px 0;
        }

        .course-details .tags {
            display: flex;
            gap: 10px;
        }

            .course-details .tags span {
                background-color: #d9534f;
                color: #fff;
                padding: 5px 10px;
                border-radius: 5px;
            }

    .see-more {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .see-more a {
            background-color: #d9534f;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
</style>

