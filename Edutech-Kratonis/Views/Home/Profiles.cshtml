@model Edutech_Kratonis.ViewModel.EducationTechUserViewModel

@{
    ViewBag.Title = "Profile";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>

        .user-icon {
            font-size: 80px; 
        }
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .profile-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .profile-header img {
                width: 50px;
                height: 50px;
            }

        .menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .menu a {
                text-decoration: none;
                color: black;
                margin: 10px 0;
            }

        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

            .content .item {
                width: 150px;
                height: 100px;
                background: #e0e0e0;
                margin: 10px;
            }

        .see-more {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #f06292;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="profile-header">
        <span class="user-icon">&#x1F464;</span>
        <h1>Hi, @Session["name"]</h1>
        @*<p>@Model.da</p>*@
    </div>
    @*<div class="menu">
        <a href="#">Favorite</a>
        <a href="#">Notification</a>
        <a href="#">Message</a>
        <a href="#">Settings</a>
    </div>*@
    <div class="content">
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
        <div class="item"></div>
    </div>
    <button class="see-more">See More</button>
</body>
</html>
